{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "react",
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"removeComments": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
}